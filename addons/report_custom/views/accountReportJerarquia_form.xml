<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_custom.jerarquia_form" model="ir.ui.view">
        <field name="name">**Cuentas Contables**</field>
        <field name="model">report_custom.account.report.jerarquia.form</field>
        <field name="arch" type="xml">
            <form string="Opciones de reporte">
                <group col="4">
                    <field name="fecha_ini"/>
                    <field name="fecha_fin"/>
                </group>
                <footer>
                    <button name="imprimir_informe" string="Imprimir" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancelar" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_jerarquia_menu" model="ir.actions.act_window">
        <field name="name">Plan contable Jerarquico</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report_custom.account.report.jerarquia.form</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_custom.jerarquia_form"/>
        <field name="target">new</field>
    </record>

    <!-- adicionamos al menu -->
    <menuitem
        name="**Lista de Cuentas**"
        id="report_custom.reportjerarquia_form"
        parent="account.menu_finance_legal_statement"
        groups="account.group_account_manager,account.group_account_user"
        action="action_jerarquia_menu"/>
</odoo>
